                <script>
                    console.log("ajax call");
                    document.getElementById("submit").onclick = function(ev) {
                        console.log("ooooook----");

                        var temp = {
                            "BookName": document.getElementById("BookName").value,
                            "BookAuthor": document.getElementById("BookAuthor").value,
                            "BookCategory": document.getElementById("BookCategory").value,
                            "BookDescription": document.getElementById("BookDescription").value,
                            "BookPrice": document.getElementById("BookPrice").value,
                            "BookMrp": document.getElementById("BookMrp").value,
                            "BookImage1": document.getElementById("BookImage1").value,
                            "UserId": document.getElementById("UserId").value,

                        }

                        console.log(temp)

                        var result = null;
                        //     console.log(temp)
                        $.ajax({
                            "crossDomain": true,
                            "url": "http://localhost:3000/api/sellbook",
                            "method": "POST",
                            "timeout": 200,
                            "data": JSON.stringify(temp),
                            "async": false,
                            "headers": {
                                "content-type": "application/json"
                            },
                            success: function(data) {
                                alert('1 data added');
                                console.log("data status" + data);
                                window.location = "http://localhost:3000/yourbook"
                                result = data;

                            },

                            fail: function(data) {
                                console.log(data)
                                result = data;
                            }
                        });

